    "editor.tabSize": 4
  },
  "[php]": {
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.tabSize": 4
  },
  "[rust]": {
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.tabSize": 4
  },
  "files.insertFinalNewline": true,
  "workbench.colorCustomizations": {
    "[Catppuccin Mocha]": {
      // "editorIndentGuide.activeBackground1": "#2e2e42", // For Catppuccin Mocha Default Theme
      // "editorIndentGuide.background1": "#232332", // For Catppuccin Mocha Default Theme
      "editorIndentGuide.activeBackground1": "#212121", // For Catppuccin Mocha Default Theme
      "editorIndentGuide.background1": "#212121" // For Catppuccin Mocha Default Theme
    },
    "[Catppuccin Latte]": {
      // "editorIndentGuide.activeBackground1": "#42392e29", // For Catppuccin Mocha Theme
      // "editorIndentGuide.background1": "#2323320a" // For Catppuccin Mocha Theme
      "editorIndentGuide.activeBackground1": "#f1f1f1", // For Catppuccin Latte Theme
      "editorIndentGuide.background1": "#f1f1f1" // For Catppuccin Latte Theme
    }
  },
  //   "[ruby]": {
  //     "editor.defaultFormatter": "Shopify.ruby-lsp",
  //     "editor.formatOnSave": true,
  //     "editor.formatOnType": true,
  //     "editor.insertSpaces": true,
  //     "files.trimTrailingWhitespace": true,
  //     "files.trimFinalNewlines": true,
  //     "editor.semanticHighlighting.enabled": true
  //   },
  "extensions.ignoreRecommendations": true,
  //   "workbench.remoteIndicator.showExtensionRecommendations": false,
  //   "editor.lineNumbers": "relative",
  //   "vim.useCtrlKeys": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  //   "files.exclude": {
  //     "**/.DS_Store": false,
  //     "**/.git": false,
  //     "**/.hg": false,
  //     "**/.ruby-lsp": false,
  //     "**/.svn": false,
  //     "**/CVS": false,
  //     "**/Thumbs.db": false
  //   },
  //   "editor.autoClosingDelete": "never",
  //   "editor.autoClosingComments": "never",
  //   "editor.autoClosingOvertype": "never",
  //   "editor.autoClosingQuotes": "never",
  "editor.stickyScroll.enabled": false,
  "workbench.iconTheme": "catppuccin-mocha",
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.codeLensFontFamily": "JetBrainsMono Nerd Font Mono",
  "debug.console.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.experimentalInlineEdit.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.inlineSuggest.fontFamily": "JetBrainsMono Nerd Font Mono",
  "scm.inputFontFamily": "JetBrainsMono Nerd Font Mono",
  "chat.editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingBrackets": "never",
  "github.copilot.editor.enableAutoCompletions": false,
  "workbench.colorTheme": "Catppuccin Mocha",
  "editor.lineNumbers": "relative",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": ".*",
        "isAsync": true
      },
      {
        "match": "\\.php$",
        "cmd": "docker exec -t wlz-hrz-php vendor/bin/php-cs-fixer fix $(echo ${relativeFile} | sed 's/horizon-back\\///')"
      }
    ]
  },
  "i18n-ally.displayLanguage": "fr",
  "i18n-ally.localesPaths": ["locales"],
  "i18n-ally.sourceLanguage": "fr",
  "i18n-ally.keystyle": "nested",
  // "catppuccin.accentColor": "red"
  "catppuccin.colorOverrides": {
    "mocha": {
      "base": "#1d1d1d",
      "mantle": "#1d1d1d",
      "crust": "#1d1d1d"
    },
    "latte": {
      "base": "#fafafa",
      "mantle": "#fafafa",
      "crust": "#fafafa"
    }
  }
}